<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.EventActivity"
    tools:showIn="@layout/activity_event">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/layout_service_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="20dp">

            <TextView
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Service Name"/>

            <TextView
                android:id="@+id/service_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/service_name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:text="00,00"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorDivider"
            android:layout_below="@+id/layout_service_info"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:id="@+id/layout_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:layout_centerHorizontal="true"
            android:padding="15dp">

            <ImageView
                android:id="@+id/icon_calendar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/calendar_flat"/>

            <TextView
                android:id="@+id/text_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_calendar"
                android:layout_marginLeft="10dp"
                android:text="week day"/>

            <TextView
                android:id="@+id/text_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_calendar"
                android:layout_below="@+id/text_week"
                android:layout_marginLeft="10dp"
                android:text="00 de November de 0000"/>

            <TextView
                android:id="@+id/text_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_calendar"
                android:layout_below="@+id/text_day"
                android:layout_marginLeft="10dp"
                android:text="week day"/>


            <Button
                android:id="@+id/button_cancel_event"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/text_day"
                android:background="@drawable/background_buttom"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:text="Cancelar"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorDivider"
            android:layout_below="@+id/layout_date_info"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:id="@+id/layout_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"
            android:layout_below="@+id/divider2">

            <TextView
                android:id="@+id/property_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address - street name"/>

            <TextView
                android:id="@+id/property_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/property_street"
                android:text="00"/>


            <TextView
                android:id="@+id/property_compl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/property_street"
                android:text="Address - Complement"/>

            <TextView
                android:id="@+id/property_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/property_street"
                android:layout_toRightOf="@+id/property_compl"
                android:text="City"/>



        </RelativeLayout>


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/layout_address" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>


