<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.dalecom.agendamobile.ui.PropertyActivity$PlaceholderFragment">


    <RelativeLayout
        android:id="@+id/layout_info_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_icon">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_rating"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="2dp"
            card_view:cardCornerRadius="2dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ajude-os a melhorar, dê sua avaliação"
                    android:layout_centerHorizontal="true"/>

                <RatingBar
                    android:id="@+id/rating_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_rating"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:theme="@style/RatingBar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:numStars="5"
                    android:rating="3.5"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="2dp"
            card_view:cardCornerRadius="2dp"
            android:layout_below="@+id/card_view_rating">

            <RelativeLayout
                android:id="@+id/property_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/property_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Nome do Estabelecimento"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/property_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Telefone: "/>

                <TextView
                    android:id="@+id/property_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_phone"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="(11) 4427-8861"/>

                <TextView
                    android:id="@+id/text_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/property_phone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Endereço:"/>

                <TextView
                    android:id="@+id/property_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_street"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Rua Jaboticabeira da Silva, 54 - Vila Maria - SP"/>

                <TextView
                    android:id="@+id/text_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/property_adress"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Funcionamento:"/>

                <TextView
                    android:id="@+id/property_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_open"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Seg. à Sex. das "/>

                <TextView
                    android:id="@+id/property_das"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/property_open"
                    android:layout_alignBaseline="@+id/property_open"
                    android:layout_marginLeft="5dp"
                    android:text="das"/>

                <TextView
                    android:id="@+id/property_open_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/property_das"
                    android:layout_alignBaseline="@+id/property_das"
                    android:layout_marginLeft="5dp"
                    android:text="09:00 às 20:00"/>

            </RelativeLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="2dp"
            card_view:cardCornerRadius="2dp"
            android:layout_below="@+id/card_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/property_info"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/text_promotions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receber notificação de promoções deste estabelecimento?"/>

                <Switch
                    android:id="@+id/switch_property_notify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_call"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            android:layout_below="@+id/card_view_2">

        <RelativeLayout
            android:id="@+id/layout_property_call"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/holo_green_dark"
            android:layout_above="@+id/card_view"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_phone_white_24dp"/>

        </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
