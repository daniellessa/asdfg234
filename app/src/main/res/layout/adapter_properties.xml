<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_property"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_property"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/profissional_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/layout_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/name_professional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Estabelecimento"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_professional"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Telefone: "
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/property_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_phone"
                    android:layout_alignBaseline="@+id/text_phone"
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:text="(11) 4427-8861"/>

                <TextView
                    android:id="@+id/text_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_phone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:text="Endereço:"/>

                <TextView
                    android:id="@+id/property_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_street"
                    android:layout_alignBaseline="@+id/text_street"
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:text="Rua Jaboticabeira da Silva, 54 - Vila Maria - SP"/>

                <TextView
                    android:id="@+id/text_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_street"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="Funcionamento:"/>

                <TextView
                    android:id="@+id/property_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_open"
                    android:layout_alignBaseline="@+id/text_open"
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:text="Seg. à Sex. das "/>

                <TextView
                    android:id="@+id/property_das"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/property_open"
                    android:layout_alignBaseline="@+id/property_open"
                    android:layout_marginLeft="5dp"
                    android:textSize="10sp"
                    android:text="das"/>

                <TextView
                    android:id="@+id/property_open_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/property_das"
                    android:layout_alignBaseline="@+id/property_das"
                    android:layout_marginLeft="5dp"
                    android:textSize="10sp"
                    android:text="09:00 às 20:00"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/profissional_info">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textSecondary"
                    android:background="@color/card_background"
                    android:text="Ligar"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textSecondary"
                    android:background="@color/card_background"
                    android:text="Ver no mapa"/>

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>